{
  "name": "bitvue-workspace",
  "version": "0.11.1",
  "description": "Bitvue workspace - video bitstream analyzer with Tauri + React",
  "private": true,
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm run test",
    "test:ui": "cd frontend && npm run test:ui",
    "test:run": "cd frontend && npm run test:run",
    "test:coverage": "cd frontend && npm run test:coverage",
    "typecheck": "cd frontend && npm run typecheck",
    "preview": "cd frontend && npm run preview",
    "lint": "cd frontend && npm run lint",
    "lint:css": "cd frontend && npm run lint:css",
    "format": "cd frontend && npm run format",
    "format:check": "cd frontend && npm run format:check",
    "tauri": "cd src-tauri && cargo tauri",
    "tauri:dev": "cd src-tauri && cargo tauri dev",
    "tauri:build": "cd src-tauri && cargo tauri build",
    "clean": "npm run clean:rust && npm run clean:frontend",
    "clean:rust": "cargo clean",
    "clean:frontend": "cd frontend && rm -rf node_modules dist"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "jsdom": "^28.1.0"
  }
}
